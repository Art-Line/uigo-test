.default-input-text
    font-size 14px
    line-height 16px
    color #111
    border none
    border-bottom 1px solid #F2F2F2
    padding: 5px 1px 6px
    width 100%
    background-color transparent
    &.default-input-text_validate
        background-image url('../images/check.svg');
        background-repeat no-repeat
        background-position right center
