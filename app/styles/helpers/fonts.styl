ptsans = 'PT Sans', sans-serif
worksans = 'Work Sans', sans-serif

@font-face {
    font-family: 'PT Sans';
    src: local('PT Sans'), local('PTSans-Regular'),
        url('../fonts/pt-sans-v11-latin-regular.woff2') format('woff2'),
        url('../fonts/pt-sans-v11-latin-regular.woff') format('woff');
    font-style: normal;
    font-weight: 400;
}

@font-face {
    font-family: 'Work Sans';
    src: local('Work Sans Light'), local('WorkSans-Light'),
        url('../fonts/work-sans-v5-latin-300.woff2') format('woff2'),
        url('../fonts/work-sans-v5-latin-300.woff') format('woff');
    font-style: normal;
    font-weight: 300;       
}

@font-face {
    font-family: 'Work Sans';
    src: local('Work Sans'), local('WorkSans-Regular'),
        url('../fonts/work-sans-v5-latin-regular.woff2') format('woff2'),
        url('../fonts/work-sans-v5-latin-regular.woff') format('woff');
    font-style: normal;
    font-weight: 400;       
}

@font-face {
    font-family: 'Work Sans';
    src: local('Work Sans Medium'), local('WorkSans-Medium'),
        url('../fonts/work-sans-v5-latin-500.woff2') format('woff2'),
        url('../fonts/work-sans-v5-latin-500.woff') format('woff');
    font-style: normal;
    font-weight: 500;       
}